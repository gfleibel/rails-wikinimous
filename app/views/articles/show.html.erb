<div class="container">
  <h1 class="mt-3 mb-4 text-primary"><%= @article.title %></h1>
  <p><%= @article.content %></p>
  <%= link_to "Edit article", edit_article_path, class: "btn btn-secondary mt-4" %>
  <%= link_to "Delete article", article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are u sure?' }, class: "btn btn-secondary mt-4" %>
  <%= link_to "Back", articles_path, class: "btn btn-secondary mt-4" %>
</div>
