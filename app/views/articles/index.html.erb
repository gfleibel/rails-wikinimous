<div class="container">
 <h1><%= link_to "Wikinimous", articles_path, class: "text-decoration-none text-primary" %></h1>
  <%= link_to "New article", new_article_path, class: "btn btn-secondary mb-4" %>
  <% @articles.each do |article| %>
  <div class="card pt-3 ps-4 mb-1">
    <h3 class="text-primary"><%= link_to article.title, article_path(article), class: "text-decoration-none" %></h3>
    <p><%= article.content %></p>
  </div>
  <% end %>
</div>
